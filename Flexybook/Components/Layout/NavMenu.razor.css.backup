.flexy-navbar {
    background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
    padding: 0;
    position: sticky;
    top: 0;
    z-index: 1000;
}

.toast {
    display: block;
    position: fixed;
    top: 2rem;
    right: 2rem;
    background: #333;
    color: #fff;
    padding: 1rem 2rem;
    border-radius: 8px;
    z-index: 10000;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
    font-size: 1.1rem;
    opacity: 0.95;
    pointer-events: none;
}

.toast.success {
    background: #5ecd4a;
}

.toast.failure {
    background: #db6b6b;
}

.navbar-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 1rem 2rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.navbar-brand {
    font-size: 1.5rem;
    font-weight: 700;
    color: #fff;
    text-decoration: none;
    letter-spacing: 0.5px;
    transition: opacity 0.2s;
}

.navbar-brand:hover {
    opacity: 0.85;
}

.navbar-menu {
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.navbar-menu .auth-link {
    background: transparent;
    border: none;
    cursor: pointer;
    color: #fff;
    text-decoration: none;
    font-size: 1rem;
    font-weight: 500;
    padding: 0.75rem 1.25rem;
    position: relative;
    transition: color 0.3s ease;
}

.navbar-menu .auth-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 3px;
    background: #fff;
    transition: width 0.5s ease;
}

.navbar-menu .auth-link:hover {
    color: #fff;
}

.navbar-menu .auth-link:hover::after {
    width: 100%;
    background: #979797;
}

.modal-backdrop {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background: rgba(0, 0, 0, 0.6);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 2000;
}

.modal-content {
    background: #fff;
    border-radius: 8px;
    padding: 2rem;
    width: 90%;
    max-width: 400px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
}

.modal-content h2 {
    margin: 0 0 1.5rem 0;
    color: #2c3e50;
    font-size: 1.5rem;
}

.form-group {
    margin-bottom: 1rem;
}

.form-group label {
    display: block;
    margin-bottom: 0.5rem;
    color: #2c3e50;
    font-weight: 500;
}

.form-control {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid #ddd;
    border-radius: 5px;
    font-size: 1rem;
    box-sizing: border-box;
}

.form-control:focus {
    outline: none;
    border-color: #2c3e50;
}

.error-message {
    color: #e74c3c;
    font-size: 0.9rem;
    margin: 1rem 0;
    padding: 0.5rem;
    background: #ffebee;
    border-radius: 4px;
}

.modal-actions {
    display: flex;
    gap: 1rem;
    margin-top: 1.5rem;
}

.btn-primary {
    flex: 1;
    background: #2c3e50;
    color: #fff;
    border: none;
    padding: 0.75rem;
    border-radius: 5px;
    font-size: 1rem;
    font-weight: 500;
    cursor: pointer;
    transition: background 0.3s ease;
}

.btn-primary:hover {
    background: #34495e;
}

.btn-secondary {
    flex: 1;
    background: transparent;
    color: #2c3e50;
    border: 2px solid #2c3e50;
    padding: 0.75rem;
    border-radius: 5px;
    font-size: 1rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
}

.btn-secondary:hover {
    background: #f5f5f5;
}

.navbar-menu ::deep a {
    color: #fff;
    text-decoration: none;
    font-size: 1rem;
    font-weight: 500;
    padding: 0.75rem 1.25rem;
    background: transparent;
    position: relative;
    transition: color 0.3s ease;
}

.navbar-menu ::deep a:hover {
    color: #fff;
    cursor: pointer;
}

.navbar-menu ::deep a:hover::after {
    width: 100%;
    background: #979797;
}

.navbar-menu ::deep a.active::after {
    width: 100%;
    background: #fff;
}

.navbar-menu ::deep a::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 3px;
    background: #fff;
    transition: width 0.5s ease;
}

.navbar-toggler {
    display: none;
    flex-direction: column;
    gap: 4px;
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
}

.toggler-icon {
    width: 24px;
    height: 2px;
    background: #fff;
    border-radius: 2px;
    transition: all 0.3s;
}

@media (max-width: 899px) {
    .flexy-navbar {
        position: fixed;
        bottom: 0;
        top: auto;
        left: 0;
        right: 0;
        width: 100%;
        box-shadow: 0 -2px 8px rgba(0, 0, 0, 0.2);
    }

    .navbar-container {
        padding: 0.8rem 1rem;
        justify-content: space-between;
    }

    .navbar-brand {
        font-size: 1.25rem;
    }

    .navbar-menu {
        display: flex;
        width: auto;
        flex-direction: row;
        align-items: center;
        margin-top: 0;
        gap: 0.5rem;
    }

    .navbar-menu ::deep a {
        text-align: center;
        padding: 0.5rem 1.5rem;
        font-size: 1.05rem;
    }
}